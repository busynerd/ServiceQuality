@model IEnumerable<ServiceQuality.Models.Service>

@{
    ViewData["Title"] = "History";
}

<h3>Test History</h3>

<table class="table table-striped">
    <thead>
        <tr>
            <th style="width:40%">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th style="width:10%">
                @Html.DisplayNameFor(model => model.Requests)
            </th>
            <th style="width:10%">
                @Html.DisplayNameFor(model => model.Success)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Url)
            </th>
            <th style="width:10%">
                Service Link
            </th>
            <th style="width:10%"></th>
            <th style="width:10%"></th>
            <th style="width:10%"></th>
        </tr>
    </thead>


    @foreach (var item in Model)
    {
        <tr>
            <td>
                <strong>@Html.DisplayFor(modelItem => item.Name)</strong>
            </td>
            <td align="center">
                @Html.DisplayFor(modelItem => item.Requests)
            </td>
            <td align="center">
                @Html.DisplayFor(modelItem => item.Success)
            </td>
            <td>
                <p class="keepShort">
                    <a href="@item.Url" target="_blank">Link</a>
                </p>
            </td>
            <td align="center">
                <a class="btn-sm btn-info" asp-action="Details" asp-route-id="@item.Id">View</a>
                <a class="btn-sm btn-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                <a class="btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
    }
</table>

@model ServiceQuality.Models.Service

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Service</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Type)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Type)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Requests)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Requests)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Success)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Success)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Url)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Url)
        </dd>
    </dl>
</div>
<div>
    <p>Results: @Html.DisplayFor(model => model.Results.Count)</p>
    <p><a href="@String.Format("/Service/Json/{0}", Model.Id)" class="btn btn-primary">View JSON</a></p>


    <table class="table table-striped">
        <thead>
            <tr>
                <th>#</th>
                <th>Start</th>
                <th>End</th>
                <th>Duration</th>
            </tr>
        </thead>
        @foreach (var r in Model.Results)
        {
            <tr>
                <td>@r.Order</td>

                @if (!r.Duration.Equals("-1"))
                {
                    <td>@r.Start.ToString("MM/dd/yyyy hh:mm:ss.ffff tt")</td>
                    <td>@r.End.ToString("MM/dd/yyyy hh:mm:ss.ffff tt")</td>
                    <td>@r.Duration</td>
                }
                else
                {
                    <td colspan="3">Error</td>
                }
            </tr>
        }
    </table>
</div>
<p>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</p>
